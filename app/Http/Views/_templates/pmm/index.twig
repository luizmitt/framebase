<!DOCTYPE html>
<html lang="{{page_lang}}">

<head>
    <meta charset="{{page_charset}}" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{app_title}}</title>
    <link rel="shortcut icon" type="image/x-icon" href="favicon.ico">
    <link rel="stylesheet" href="{{URL}}assets/dist/plugins.css" type="text/css" />
    {{load_css()}}
    {% block page_header %}{% endblock %}
</head>

<body>
    <div id="container">
        <lockscreen :prop-activated="lockscreen"></lockscreen>
        <div id="header" class="navbar navbar-default navbar-static-top">
            <div class="container">
                <div class="navbar-header-fluid">
                    <a href="{{URL}}">
                        <div class="row">
                            <div class="col-xs-6 col-md-6">
                                <img class="img-responsive left login-logo" src="{{URL}}images/pmm/logo-sistemaspmm.svg">
                            </div>

                            <div class="col-xs-6 col-md-6">
                                <img class="img-responsive right login-logo" src="{{URL}}images/pmm/{{app_name | lower}}-logoname.png">
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        </div>


        {% if not disable_menu %}
        <div id='menufixed' class="navbar navbar-default" role="navigation">
            <div class="container">
                {% include '_templates/pmm/menu.twig' %}
            </div>
        </div>
        {% endif %}


        <div id="body" class="container">
            <div class="container-fluid">
                {% if not disable_breadcrumb %}
                {{breadcrumb | raw}}
                {% endif %}

                {% block content %}
                {# BLOCO DE CONTEUDO #}
                {% endblock %}
            </div>
        </div>

        <footer id="footer" class="footer">
            <div class="container">
                <div class="row">
                    <div class="col-md-9" style="font-size:0.85em; text-align:left; margin-top:20px;">
                        <p>
                            Desenvolvido pelo Departamento de Sistemas e Tecnologias da Informação - DSTI / SEMAD</p>

                        <p>Suporte:
                            <a href="tel:92988427838" target="_blank">(92) 98842-7838</a>
                            /
                            <a href="tel:92988551465" target="_blank">98855-1465</a>
                            /
                            <a href="tel:92988445043" target="_blank">98844-5043</a>
                            /
                            <a href="mailto:sistemaspmm@pmm.am.gov.br" target="_blank">sistemaspmm@pmm.am.gov.br</a>
                        </p>

                        <p>
                            <a href="http://semad.manaus.am.gov.br" target="_blank">http://semad.manaus.am.gov.br</a>
                        </p>
                    </div>

                    <div class="col-md-3 text-right hidden-sm hidden-xs">
                        <a class="right" href="http://sistemaspmm.manaus.am.gov.br/" target="_blank">
                            <img src="{{URL}}images/pmm/logo-semad-prefeiturademanaus.svg" style="height:100px" />
                        </a>
                    </div>
                </div>
            </div>
        </footer>
    </div>
    {# AQUI CARREGA AS MODALS #}
    {% block modals %}{% endblock %}
    {% include '@view/_modals/modal.gitlog.twig' ignore missing %}
    {% include '@view/_modals/modal.alterarSenha.twig' ignore missing %}
    {# VARIAVEIS ESSENCIAIS PARA O FUNCIONAMENTO DA APPLICAÇÃO #}
    <script type="text/javascript">
        const url = "{{URL}}";
    </script>
    {# PLUGINS ESSENCIAIS PARA O FUNCIONAMENTO DA APPLIAÇÃO (Utilizar bower/gulp) #}
    <script type="text/javascript" src="{{URL}}assets/dist/plugins.js"></script>
    <script type="text/javascript" src="{{URL}}assets/dist/app.js"></script>

    {# AUTOLOAD DOS SCRIPTS DOS TEMPLATES #}
    {{load_js()}}

    <script type="text/javascript">
        var $ = jQuery.noConflict();

        const app = new Vue({
            el: '#container',
            delimiters: ["${", "}"],
            components: {
                'lockscreen':lockscreen
            },
            data: {
                lockscreen: false
            }
        });
    </script>
    {# SCRIPTS ADICIONAIS PELO TEMPLATE #}
    {% block page_scripts %}{% endblock %}
</body>

</html>