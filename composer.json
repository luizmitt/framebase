{
    "name": "thupan/framebase",
    "description": "Thupan PHP Framework",
    "license": "MIT",
    "authors": [{
        "name": "Sistemas PMM",
        "email": "devs.semad@pmm.am.gov.br",
        "homepage": "http://github.com/thupan",
        "role": "Developer"
    }],

    "repositories": [{
        "type": "package",
        "package": {
            "name": "thupan/pmm",
            "version": "1.0.0",
            "source": {
                "url": "https://gitlab.com/thupan/pmm.git",
                "type": "git",
                "reference": "master"
            }
        }
    }],

    "require": {
        "php": ">=5.5.0",
        "thupan/framework": "dev-develop",
        "thupan/pmm": "1.0.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Thupan\\Pmm\\": "vendor/thupan/pmm/src"
        }
    },
    "scripts": {
        "post-install-cmd": [],
        "thupan-install": "sh ${PWD}/resources/scripts/config_install.sh",
        "post-update-cmd": [],
        "thupan-update": "sh ${PWD}/resources/scripts/config_update.sh",
        "thupan-start": "php -elswS 0.0.0.0:8080 -t public public/index.php",
        "thupan-test": "phpunit",
        "thupan-autoload": "composer dump-autoload -o --profile -vvv",
        "build": "sh ${PWD}/resources/scripts/build.sh"
    }
}